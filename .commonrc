# basic aliases
alias ll="ls -al"

# nvim
if [[ -x "$(command -v nvim)" ]]
then
    alias vim="nvim"
    alias vi="nvim"
    alias vimdiff="nvim -d"
    export EDITOR=/usr/local/bin/nvim
    export VISUAL=/usr/local/bin/nvim
else
    export EDITOR=vi
    export VISUAL=vi
fi

# vi mode
set -o vi

# dotfiles
alias dotfiles="/usr/bin/git --git-dir=$HOME/.dotfiles.git/ --work-tree=$HOME"

